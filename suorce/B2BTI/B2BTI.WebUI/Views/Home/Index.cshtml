@model B2BTI.WebUI.Models.HomeViewModel

@{
    ViewBag.Title = "Index";
    
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

  <meta charset="utf-8">
  <meta http-equiv="content-style-type" content="text/css">
  <meta http-equiv="content-script-type" content="text/javascript">
  <title>Powerful</title>
  
  <link href="../Content/css/global.css" rel="stylesheet">
  <link href="../Content/css/bootstrap.css" rel="stylesheet" media="screen">

    <!--[if lt IE 9]>
    <link rel="stylesheet" type="text/css" href="/assets/ie.css">
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
    <![endif]-->

    <!--[if (gte IE 6)&(lte IE 8)]>
    <script type="text/javascript" src="/assets/javascripts/selectivizr-min.js"></script>
    <![endif]-->

</head>

<body id="top" >

   <div id="wrapper">
     <header>
	  <div class="inner">
	     <h1 id="logo">
		    <a href="http://www.baidu.com/" id="over">炮否</a>
		 </h1>
		 <nav id="globalNav">
		    <ul id="globalmenu">
			   <li class="basicmenu">
			     <a href="注册页面">注册</a>
			   </li>
			   <li class="basicmenu">
			     <a href="登录页面" id="rightborder">登录</a>
			   </li>
			</ul>
		 </nav>
	  </div>
	 </header>
	 <div id="home">
		    <div id="myCarousel" class="carousel slide">
			  <div class="carousel-inner">
				  <div class="item active">
					 <img src="../Content/img/00.jpg" alt="">
				  </div>
				  <div class="item">
					 <img src="../Content/img/01.jpg" alt="">
				  </div>
				  <div class="item">
					 <img src="../Content/img/02.jpg" alt="">
				  </div>
			  </div>
			  <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
			  <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
			</div>
			<div class="row-fluid">
			   <ul class="thumbnails">
                 @foreach (var item in @Model.routeList)
                 {
                     <li class="span3">
				        <div class="thumbnail">
					       <img data-src="holder.js/300x200" alt="">
                           <div class="caption">
                              <h3>@item.RouteName</h3>
                              <p>@item.RouteDetail</p>
                              <p><a href="#" class="btn btn-primary">Action</a> <a href="#" class="btn">Action</a></p>
                            </div>
                        </div>
				     </li>
                 }

			   </ul>
			</div>
	 </div>
	 <hr>
	 <footer>
	     <div class="inner">
	         <p class="pull-left">&copy; <a href="#" target="_blank">Powerful Tech</a> 2013</p>
	 	     <p class="pull-right">Powered by: <a href="#">炮否科技</a></p>
	     </div>
	 </footer>
   </div>
  <script src="http://code.jquery.com/jquery.js"></script>
  <script type="text/javascript"  src="../Scripts/js/bootstrap.js"></script>
  <script>
      !function ($) {
          $(function () {
              $('#myCarousel').carousel()
          })
      } (window.jQuery)
   </script>
</body>


</html>


